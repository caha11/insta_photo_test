
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1> Upload Image and Caption </h1>
        <%= simple_form_for @post do |f| %>
            <div class="form-group">
                <%= f.input :image, as: :file %>
            </div>
                
            <div class="form-group">
                <%= f.input :caption %>
            </div>
                
            <div class="form-group text-center">
                <%= f.button :submit, class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>
</div>