<% @posts.each do |post| %>
    <div class="posts-wrap row">
        <div class="col-md-4 col-md-offset-4">
            <div class="post">
                <div class="post-head">
                    <div class="name">
                        Manu Adina-Zada
                    </div>
                </div>
            </div>
            
            <div class="image center-block">
                <%= image_tag post.image.url(:medium), class:'img-responsive' %>
            </div>
            <p class="caption">
                <%= post.caption %>
            </p>
        </div>
    </div>
<% end %>